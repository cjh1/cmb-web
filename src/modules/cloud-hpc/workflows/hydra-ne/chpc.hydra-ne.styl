color-green = #42D305
color-red   = #D34205
color-light   = #ccc

hydra-ne-project
   .project-title
      position absolute
      left 25%
      width 50%
      top 0.7em
      color white
      font-weight bold
      text-align center

   .project-sub-title
      position absolute
      left 25%
      width 50%
      top 3.33em
      font-weight bold
      text-align center

   .disabled
      cursor not-allowed

   .edit-simulation
      .navigation
         margin-top 10px

         .nav > li
            display block
            padding 4px 20px
            font-size 13px
            font-weight 500
            color #999

         .nav > li.active
            color #000
            font-weight 700

         .green
            color color-green

         .red
            color color-red

      .body
         margin-left 190px
         padding-left 15px
         border-left solid 1px color-light

         hr
            margin 0 0 10px 0

         .collapsed .collapsable
            display none

         .form-group .row.top-margin
            margin-top 10px

         .body-navigation
            position absolute
            top 3.25em
            right 10px

            .green
               color color-green

            .red
               color color-red

   .hydra-mesh-viewer
      position absolute
      left 0
      right 0
      top 5.5em
      bottom 0

      .control-panel
         position absolute
         top -33px
         right 5px
         z-index 200
         background color-light
         border-radius 5px
         text-align center

      .control-tab
         position absolute
         left 0
         top 0
         width 200px
         bottom 0
         overflow scroll

      .renderer
         position absolute
         top 0
         left 200px
         right 0
         height 100%

   .hydra-result-viewer
      .head-toolbar span
         position relative
         top 2px
         font-size 16px

      .fix-height
         position relative
         top 0
         left 0

      .property
         margin 5px -15px

      .pv-time-input
         position relative
         top 2px
         width 80px
         border solid 1px white
         background none
         padding 2px 10px

      .clickable
         cursor pointer
         user-select none

      .pv-h4-font
         font-size 16px

      .pv-gray-darker
         background #222
         color #eee

      .pv-gray-dark
         background #333
         color #eee

      .pv-gray
         background #555
         color #eee

      .pv-gray-light
         background #777
         color #eee

      .pv-gray-lighter
         background #eee
         color #000

      .pv-gray-lighter-transparent
         background rgba(238,238,238,0.8)
         color #000

      .pv-text-black
         color #000

      .pv-text-white
         color #FFFFFF

      .pv-text-gray
         color #555

      .pv-text-red
         color #e1002a

      .pv-text-green
         color #e9bc2f

      .pv-form-height
         height 20px
         padding 0 5px

      .pv-round
         border-radius 10px
         padding 0 10px

      .hover-higlight:hover
         background #333
         color #eee

      .float-right
         float right

      .float-left
         float left

      .padding
         margin 5px 2px

      .nopadding
         padding-left 0 !important
         padding-right 0 !important

      .pv-side-margin
         margin 0 5px

      .pv-side-padding
         padding 0 5px

      .lower-right-round-corner
         border-radius 0 0 10px 0

      .no-overflow
         overflow hidden

      .scroll-overflow
         overflow scroll

      .pv-fixed
         position absolute
         top 0
         left 15px
         right 15px
         z-index 1

         .pv-editor-bar
            margin 0 !important
            padding 0 !important

      .breadcrumb
         margin-bottom 0

      .dl-horizontal dd
         margin-left 80px

      .dl-horizontal dt
         width 60px

      .pv-absolute-left
         position absolute
         left -15px
         top -25px

      .pv-collapsable-content
         padding-top 25px

      .pv-collapsable-content.pv-collapse
         padding 0

      div.pv-collapse-title
         display none
         position relative

      div.pv-no-collapse-title
         display block
         position relative

      .pv-collapse > div
         display none !important

      .pv-collapse div.pv-collapse-title
         display block !important

      .pv-data-info dl
         margin-bottom 0

      .pv-data-info .table
         margin-bottom 20px

      .pv-callout
          -moz-border-bottom-colors none
          -moz-border-left-colors none
          -moz-border-right-colors none
          -moz-border-top-colors none
          border-color #eee
          border-image none
          border-radius 10px
          border-style solid
          border-width 1px 1px 1px 5px
          margin 20px 0
          padding 20px
          background white


      .pv-callout h4
         margin-bottom 5px
         margin-top 0

      .pv-callout p:last-child
         margin-bottom 0

      .pv-callout + .pv-callout
         margin-top -5px

      .pv-callout-info
         border-left-color #222

      .pv-callout-info h4
         color #222

      .hide-on-start
         display none

      .start-page-image
         display block
         margin-left auto
         margin-right auto

      .start-page-busy-icon
         font-size 48px
         margin-left auto
         margin-right auto
         display block
         width 68px

      .fa
         margin 4px 5px 0 5px
